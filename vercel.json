{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "https://lets-run.onrender.com/api/$1" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
